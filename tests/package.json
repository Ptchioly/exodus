{
  "name": "exodus-tests",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:open:mobile": "cypress open --config viewportWidth=375,viewportHeight=812",
    "cy:run:mobile": "cypress run --config viewportWidth=375,viewportHeight=812",
    "cy:run:staging": "cross-env CYPRESS_BASE_URL=https://staging.beeeee.es cypress run --env apiUrl=https://staging-api.beeeee.es",
    "cy:open:staging": "cross-env CYPRESS_BASE_URL=https://staging.beeeee.es cypress open --env apiUrl=https://staging-api.beeeee.es",
    "cy:open:local": "cross-env CYPRESS_BASE_URL=http://localhost:5000 cypress open --env apiUrl=http://localhost:8080",
    "backend:start": "cd ../backend && npm ci && npx tsc && node out/src/app.js",
    "frontend:start": "cd ../frontend && npm ci && npm run dev",
    "lint": "eslint --ext .ts,.js .",
    "lint-fix": "npm run lint -- --fix"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.6.0",
    "@typescript-eslint/parser": "2.6.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.4.0",
    "cypress-dark": "^1.7.14",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^1.18.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "lint-fix"
  }
}
